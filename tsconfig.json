{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@healthcheck/*": ["src/healthcheck/*"],
      "@notes/*": ["src/notes/*"],
      "@securities/*": ["src/securities/*"],
      "@tags/*": ["src/tags/*"],
      "@users/*": ["src/users/*"],
    },
  }
}
